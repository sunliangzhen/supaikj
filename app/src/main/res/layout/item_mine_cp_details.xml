<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="30px"
        android:background="@color/main_color" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="256px"
        android:paddingLeft="40px"
        android:paddingRight="40px">

        <ImageView
            android:id="@+id/item_imgv"
            android:layout_width="200px"
            android:layout_height="200px"
            android:layout_centerVertical="true"
            android:layout_marginRight="42px"
            android:scaleType="fitXY"
            android:src="@drawable/ic_test" />

        <TextView
            android:id="@+id/item_tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="42px"
            android:layout_toRightOf="@id/item_imgv"
            android:text="清末青花瓷"
            android:textColor="#444"
            android:textSize="43px" />

        <TextView
            android:id="@+id/item_tv_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="40px"
            android:text="200元"
            android:textColor="#c8928b"
            android:textSize="40px"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/item_tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_tv_type"
            android:layout_marginTop="22px"
            android:layout_toRightOf="@id/item_imgv"
            android:text="2017-01-01 12:00:01开始"
            android:textColor="#999"
            android:textSize="34px" />

        <TextView
            android:id="@+id/item_tv_payT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/item_tv_type"
            android:layout_marginTop="28px"
            android:text="起拍价"
            android:textColor="#999"
            android:textSize="34px" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="128px"
        android:paddingRight="40px">

        <TextView
            android:layout_width="216px"
            android:layout_height="72px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/shap_01"
            android:gravity="center"
            android:text="出价"
            android:textColor="#c8b08e"
            android:textSize="43px" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#d9d9d9" />

    </RelativeLayout>

</LinearLayout>
