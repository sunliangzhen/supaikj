<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="252px"
        android:paddingLeft="40px"
        android:paddingRight="40px">

        <ImageView
            android:id="@+id/imgv"
            android:layout_width="172px"
            android:layout_height="172px"
            android:layout_centerVertical="true"
            android:layout_marginTop="40px"
            android:scaleType="fitXY"
            android:src="@drawable/ic_wei3" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="42px"
            android:layout_marginTop="58px"
            android:layout_toRightOf="@id/imgv"
            android:maxLines="1"
            android:text="速拍科技"
            android:textColor="#444"
            android:textSize="43px" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_name"
            android:layout_marginLeft="42px"
            android:layout_marginTop="22px"
            android:layout_toRightOf="@id/imgv"
            android:maxLines="1"
            android:text="特色介绍"
            android:textColor="#999"
            android:textSize="34px" />

        <TextView
            android:layout_width="216px"
            android:layout_height="100px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/shap_01"
            android:gravity="center"
            android:text="取消关注"
            android:textColor="#c8b08e"
            android:textSize="37px" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="#d9d9d9" />
    </RelativeLayout>
</LinearLayout>

