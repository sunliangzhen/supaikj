<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="144px"
        android:background="#fff"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="46px"
            android:layout_height="46px"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="46px"
            android:layout_marginRight="26px"
            android:scaleType="fitXY"
            android:src="@drawable/ic_home_sign" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="热门拍品"
            android:textColor="#444"
            android:textSize="43px"
            android:textStyle="bold" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="576px">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/ic_test" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#9000"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="206px"
                android:text="锦绣玉河拍卖会专场"
                android:textColor="#f8f8f8"
                android:textSize="57px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="62px"
                android:text="东方拍卖  |   2017-09-09  09:00:00 开拍"
                android:textColor="#e5e5e5"
                android:textSize="40px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30px"
                android:text="拍卖年代韵味来自一系列各种"
                android:textColor="#e5e5e5"
                android:textSize="34px" />
        </LinearLayout>


        <ImageView
            android:layout_width="158px"
            android:layout_height="72px"
            android:layout_marginTop="44px"
            android:scaleType="fitXY"
            android:src="@drawable/ic_home_type1" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="260px"
        android:paddingLeft="40px"
        android:paddingRight="40px">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true">

            <TextView
                android:id="@+id/tv_pro_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="清末青花瓷"
                android:textColor="#444"
                android:textSize="46px" />

            <TextView
                android:id="@+id/tv_pro_des"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_pro_title"
                android:layout_marginTop="20px"
                android:text="拍品年代韵味来自一系列各种说明"
                android:textColor="#999"
                android:textSize="34px" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_pro_des"
                android:layout_marginTop="29px"
                android:gravity="bottom"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="当前价"
                    android:textColor="#8dc8b0"
                    android:textSize="28px" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12px"
                    android:layout_marginRight="12px"
                    android:text="￥"
                    android:textColor="#8dc8b0"
                    android:textSize="28px" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="400"
                    android:textColor="#8dc8b0"
                    android:textSize="43px"
                    android:textStyle="bold" />
            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="86px"
                android:layout_height="86px"
                android:layout_alignParentRight="true"
                android:scaleType="fitXY"
                android:src="@drawable/shape_yuan" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30px"
                android:text="东方拍卖"
                android:textColor="#999"
                android:textSize="24px" />
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="30px"
        android:background="#eff3f6" />
</LinearLayout>
