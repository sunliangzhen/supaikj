<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300px">

        <ImageView
            android:id="@+id/imgv_goods"
            android:layout_width="300px"
            android:layout_height="200px"
            android:layout_centerVertical="true"
            android:layout_marginRight="30px"
            android:scaleType="fitXY"
            android:src="@drawable/lj_test" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30px"
            android:layout_marginTop="30px"
            android:layout_toRightOf="@id/imgv_goods"
            android:ellipsize="end"
            android:maxEms="20"
            android:maxLines="2"
            android:text="武夷山武夷山武夷山武夷山武夷山武夷山武夷山武夷山武夷山武夷山武夷山武夷山武夷山武夷山武夷山武夷山武夷山武夷山"
            android:textColor="#000"
            android:textSize="40px" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="30px"
            android:layout_toRightOf="@id/imgv_goods">

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥3800.00"
                android:textColor="@color/main_color2"
                android:textSize="45px"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="30px"
                android:text="100%  好评"
                android:textColor="#9b9b9b"
                android:textSize="35px" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="#dbdbdb" />
    </RelativeLayout>

</LinearLayout>
