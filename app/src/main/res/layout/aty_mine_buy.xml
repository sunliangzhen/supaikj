<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_color"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/in_head" />


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="144px"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/news_tv_01"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/normal_white_pressed_gray"
                android:gravity="center"
                android:text="全部"
                android:textColor="@color/main_color2"
                android:textSize="43px" />

            <View
                android:layout_width="1px"
                android:layout_height="50px"
                android:background="#ebebeb" />

            <TextView
                android:id="@+id/news_tv_02"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/normal_white_pressed_gray"
                android:gravity="center"
                android:text="待支付"
                android:textColor="#999"
                android:textSize="43px" />

            <View
                android:layout_width="1px"
                android:layout_height="50px"
                android:background="#ebebeb" />

            <TextView
                android:id="@+id/news_tv_03"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/normal_white_pressed_gray"
                android:gravity="center"
                android:text="待发货"
                android:textColor="#999"
                android:textSize="43px" />

            <View
                android:layout_width="1px"
                android:layout_height="50px"
                android:background="#ebebeb" />

            <TextView
                android:id="@+id/news_tv_04"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/normal_white_pressed_gray"
                android:gravity="center"
                android:text="待收货"
                android:textColor="#999"
                android:textSize="43px" />

            <View
                android:layout_width="1px"
                android:layout_height="50px"
                android:background="#ebebeb" />

            <TextView
                android:id="@+id/news_tv_05"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/normal_white_pressed_gray"
                android:gravity="center"
                android:text="已完成"
                android:textColor="#999"
                android:textSize="43px" />

        </LinearLayout>

        <View
            android:id="@+id/news_v_line"
            android:layout_width="60px"
            android:layout_height="9px"
            android:background="@drawable/shape_sort" />

    </FrameLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v4.view.ViewPager>
</LinearLayout>
