<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:background="#E2E2E2" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="130px"
        android:paddingLeft="30px"
        android:paddingRight="30px">

        <ImageView
            android:id="@+id/imgv_head"
            android:layout_width="80px"
            android:layout_height="80px"
            android:layout_centerVertical="true"
            android:scaleType="fitXY"
            android:src="@drawable/ic_test" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30px"
            android:layout_toRightOf="@+id/imgv_head"
            android:text="受益人"
            android:textColor="#000"
            android:textSize="40px" />

        <TextView
            android:layout_width="180px"
            android:layout_height="80px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="30px"
            android:textSize="40px"
            android:textColor="#D29797"
            android:text="待付款"
            android:gravity="center"
            android:background="@drawable/tv_shape_01" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="#E2E2E2" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="250px"
        android:background="@color/white"
        android:padding="30px">

        <ImageView
            android:id="@+id/daifukuan_iv_1"
            android:layout_width="200px"
            android:layout_height="200px"
            android:layout_centerVertical="true"
            android:layout_marginRight="30px"
            android:scaleType="fitXY"
            android:src="@drawable/ic_test" />

        <TextView
            android:id="@+id/daifukuan_tv_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20px"
            android:layout_toRightOf="@id/daifukuan_iv_1"
            android:maxLines="1"
            android:text="博朗电动剃须刀全自动"
            android:textColor="#666"
            android:textSize="40px" />


        <TextView
            android:id="@+id/daifukaun_tv_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/daifukuan_iv_1"
            android:layout_marginBottom="10px"
            android:layout_toRightOf="@id/daifukuan_iv_1"
            android:text="x3"
            android:textColor="#c9c9c9"
            android:textSize="35px" />

    </RelativeLayout>

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/daifukuan_iv_1"
        android:background="#E2E2E2" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120px"
        android:layout_below="@id/line"
        android:paddingLeft="30px"
        android:paddingRight="30px">

        <TextView
            android:id="@+id/daifukaun_tv_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="￥180.00"
            android:textColor="@color/status_main2"
            android:textSize="50px"
            android:textStyle="bold" />


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:background="#E2E2E2" />

    <View
        android:layout_width="match_parent"
        android:layout_height="30px"
        android:background="#F4F5F6" />
</LinearLayout>