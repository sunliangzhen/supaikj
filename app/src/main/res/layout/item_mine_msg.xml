<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:orientation="vertical">

    <com.spkj.supai.view.AutoSwiMenuLayout
        android:id="@+id/swipe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff">

        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="40px"
            android:paddingRight="40px">

            <ImageView
                android:id="@+id/imgv"
                android:layout_width="73px"
                android:layout_height="73px"
                android:layout_marginTop="42px"
                android:scaleType="fitXY"
                android:src="@drawable/ic_set" />

            <TextView
                android:id="@+id/item_tv_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="42px"
                android:layout_marginTop="44px"
                android:layout_toRightOf="@id/imgv"
                android:gravity="center"
                android:text="系统消息"
                android:textColor="#444"
                android:textSize="37px" />


            <TextView
                android:id="@+id/item_tv_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/item_tv_nickname"
                android:layout_marginLeft="42px"
                android:layout_marginRight="126px"
                android:layout_marginTop="14px"
                android:layout_toRightOf="@id/imgv"
                android:text="系统消息系统消息系统消息系统消息系统消息系统消息系统消息系统消息系统消息系统消息"
                android:textColor="#999"
                android:textSize="34px"
                android:textStyle="normal" />

            <ImageView
                android:layout_width="28px"
                android:layout_height="50px"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:scaleType="fitXY"
                android:src="@drawable/ic_back1" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_below="@+id/item_tv_edit"
                android:layout_marginTop="48px"
                android:background="#d9d9d9" />
        </com.zhy.autolayout.AutoRelativeLayout>

        <Button
            android:id="@+id/btnDelete"
            android:layout_width="216px"
            android:layout_height="match_parent"
            android:background="#C8928D"
            android:text="删除"
            android:textColor="@android:color/white"
            android:textSize="43px"
            android:visibility="visible" />
    </com.spkj.supai.view.AutoSwiMenuLayout>



</LinearLayout>
