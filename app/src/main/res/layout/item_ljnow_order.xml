<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:orientation="vertical">

    <com.spkj.supai.view.AutoSwiMenuLayout
        android:id="@+id/swipe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff">

        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="300px"
            android:paddingLeft="40px"
            android:paddingRight="40px">

            <ImageView
                android:id="@+id/imgv_01"
                android:layout_width="72px"
                android:layout_height="72px"
                android:layout_centerVertical="true"
                android:layout_marginRight="40px"
                android:scaleType="fitXY"
                android:src="@drawable/lj_ic_radio" />

            <ImageView
                android:id="@+id/imgv_goods"
                android:layout_width="200px"
                android:layout_height="200px"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/imgv_01"
                android:scaleType="fitXY"
                android:layout_marginRight="30px"
                android:src="@drawable/lj_test" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40px"
                android:layout_toRightOf="@id/imgv_goods"
                android:ellipsize="end"
                android:maxEms="15"
                android:maxLines="2"
                android:text="放到放到放到放到放到放到放到放到放到放到放到放到放到放到放到放到放到放到放到放到放到放到放到放到放到放到放到放到放到放到"
                android:textColor="#4a4a4a"
                android:textSize="40px" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="40px"
                android:layout_toRightOf="@id/imgv_goods"
                android:gravity="bottom"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥192.00"
                    android:textColor="@color/main_color2"
                    android:textSize="45px"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="93px"
                    android:layout_height="93px"
                    android:scaleType="fitXY"
                    android:layout_marginLeft="30px"
                    android:src="@drawable/lj_ic_jian" />
                <TextView
                    android:layout_width="200px"
                    android:layout_marginLeft="10px"
                    android:layout_marginRight="10px"
                    android:textSize="40px"
                    android:text="1"
                    android:gravity="center"
                    android:background="@drawable/editext_bg2"
                    android:layout_height="match_parent" />
                <ImageView
                    android:layout_width="93px"
                    android:layout_height="93px"
                    android:scaleType="fitXY"
                    android:src="@drawable/lj_ic_add" />

            </LinearLayout>

        </com.zhy.autolayout.AutoRelativeLayout>

        <Button
            android:id="@+id/btnDelete"
            android:layout_width="216px"
            android:layout_height="match_parent"
            android:background="#C8928D"
            android:text="删除"
            android:textColor="@android:color/white"
            android:textSize="43px"
            android:visibility="visible" />
    </com.spkj.supai.view.AutoSwiMenuLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#dbdbdb" />

</LinearLayout>
