<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipeRefreshLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_color">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="502px"
                android:background="#ECECEC">

                <RelativeLayout
                    android:id="@+id/relay_head"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="40px"
                    android:paddingRight="40px"
                    android:visibility="visible">

                    <ImageView
                        android:id="@+id/mine_imgv_head"
                        android:layout_width="230px"
                        android:layout_height="230px"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="86px"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_head" />

                    <TextView
                        android:id="@+id/mine_tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20px"
                        android:layout_toRightOf="@id/mine_imgv_head"
                        android:text="小霸王sssss"
                        android:textColor="#444"
                        android:textSize="52px" />

                    <TextView
                        android:id="@+id/tv_mine_day"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/mine_tv_name"
                        android:layout_marginTop="8px"
                        android:layout_toRightOf="@id/mine_imgv_head"
                        android:text="加入速拍10天"
                        android:textColor="#999"
                        android:textSize="32px" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_mine_day"
                        android:layout_marginTop="28px"
                        android:layout_toRightOf="@id/mine_imgv_head"
                        android:gravity="bottom"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_follow"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="关注"
                            android:textColor="#999"
                            android:textSize="34px" />

                        <TextView
                            android:id="@+id/tv_follow_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="28px"
                            android:text="189"
                            android:textColor="#999"
                            android:textSize="43px"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_collection"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="44px"
                            android:text="收藏"
                            android:textColor="#999"
                            android:textSize="34px" />

                        <TextView
                            android:id="@+id/tv_collection_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="28px"
                            android:text="189"
                            android:textColor="#999"
                            android:textSize="43px"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="35px"
                        android:layout_height="61px"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_back2" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_mine_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="登录/注册"
                    android:textColor="@color/main_color2"
                    android:textSize="50px" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="180px"
                android:background="#fff"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="120" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20px"
                        android:text="粉丝" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="120" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20px"
                        android:text="关注" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="120" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20px"
                        android:text="收藏" />

                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/relay_account"
                android:layout_width="match_parent"
                android:layout_height="144px"
                android:background="#ffffff"
                android:paddingLeft="40px"
                android:paddingRight="40px">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="我的账户"
                    android:textColor="#666"
                    android:textSize="40px" />

                <ImageView
                    android:layout_width="28px"
                    android:layout_height="50px"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_back1" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relay_canpai"
                android:layout_width="match_parent"
                android:layout_height="144px"
                android:layout_marginTop="28px"
                android:background="#ffffff"
                android:paddingLeft="40px"
                android:paddingRight="40px">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="我参拍的"
                    android:textColor="#666"
                    android:textSize="40px" />

                <ImageView
                    android:layout_width="28px"
                    android:layout_height="50px"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_back1" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_alignParentBottom="true"
                    android:background="#DADADA" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relay_buy"
                android:layout_width="match_parent"
                android:layout_height="144px"
                android:background="#ffffff"
                android:paddingLeft="40px"
                android:paddingRight="40px">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="我买到的"
                    android:textColor="#666"
                    android:textSize="40px" />

                <ImageView
                    android:layout_width="28px"
                    android:layout_height="50px"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_back1" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_alignParentBottom="true"
                    android:background="#DADADA" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relay_yz"
                android:layout_width="match_parent"
                android:layout_height="144px"
                android:background="#ffffff"
                android:paddingLeft="40px"
                android:paddingRight="40px">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="我应征的"
                    android:textColor="#666"
                    android:textSize="40px" />

                <ImageView
                    android:layout_width="28px"
                    android:layout_height="50px"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_back1" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_alignParentBottom="true"
                    android:background="#DADADA" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relay_wt"
                android:layout_width="match_parent"
                android:layout_height="144px"
                android:background="#ffffff"
                android:paddingLeft="40px"
                android:paddingRight="40px">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="我委托的"
                    android:textColor="#666"
                    android:textSize="40px" />

                <ImageView
                    android:layout_width="28px"
                    android:layout_height="50px"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_back1" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relay_address"
                android:layout_width="match_parent"
                android:layout_height="144px"
                android:layout_marginTop="28px"
                android:background="#ffffff"
                android:paddingLeft="40px"
                android:paddingRight="40px">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="收货地址"
                    android:textColor="#666"
                    android:textSize="40px" />

                <ImageView
                    android:layout_width="28px"
                    android:layout_height="50px"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_back1" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relay_msg"
                android:layout_width="match_parent"
                android:layout_height="144px"
                android:layout_marginTop="28px"
                android:background="#ffffff"
                android:paddingLeft="40px"
                android:paddingRight="40px">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="消息中心"
                    android:textColor="#666"
                    android:textSize="40px" />

                <ImageView
                    android:layout_width="28px"
                    android:layout_height="50px"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_back1" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relay_company"
                android:layout_width="match_parent"
                android:layout_height="144px"
                android:layout_marginTop="28px"
                android:background="#ffffff"
                android:paddingLeft="40px"
                android:paddingRight="40px">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="机构入驻"
                    android:textColor="#666"
                    android:textSize="40px" />

                <ImageView
                    android:layout_width="28px"
                    android:layout_height="50px"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_back1" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relay_set"
                android:layout_width="match_parent"
                android:layout_height="144px"
                android:layout_marginTop="28px"
                android:background="#ffffff"
                android:paddingLeft="40px"
                android:paddingRight="40px">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="设置"
                    android:textColor="#666"
                    android:textSize="40px" />

                <ImageView
                    android:layout_width="28px"
                    android:layout_height="50px"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_back1" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="100px" />
        </LinearLayout>
    </ScrollView>

</android.support.v4.widget.SwipeRefreshLayout>
