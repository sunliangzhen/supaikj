        <clip>
            <shape>
                <gradient
                    android:endColor="@color/black"
                    android:startColor="@color/black"/>
            </shape>
        </clip>
    </item>
    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <gradient
                    android:endColor="#5DADB8"
                    android:startColor="#5DADB8"/>
            </shape>
        </clip>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <gradient
                    android:endColor="#5DADB8"
                    android:startColor="#5DADB8"/>
            </shape>
        </clip>
    </item>
